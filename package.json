{
  "name": "replicante",
  "version": "1.1.1",
  "description": "Replicante CLI: every project can be a template for a new one",
  "repository": "github:DyegoMaas/Replicante",
  "types": "build/types/types.d.ts",
  "bin": {
    "replicante": "bin/replicante"
  },
  "scripts": {
    "preinstall": "",
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p . --skipLibCheck",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "copy-replication-js": "cp -a ./src/replication ./build/",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates && yarn copy-replication-js",
    "prepublishOnly": "yarn build",
    "test": "jest --runInBand --coverage",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "execa": "^5.0.0",
    "gluegun": "latest",
    "istextorbinary": "^5.12.0",
    "js-yaml": "^4.0.0",
    "mustache": "^4.0.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^14.14.35",
    "jest": "^24.1.0",
    "prettier": "^2.2.1",
    "semver-regex": "^3.1.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
